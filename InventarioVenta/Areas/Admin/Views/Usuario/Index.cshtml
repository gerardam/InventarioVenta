@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="col-md-6">
	<h3 class="text-primary"> Lista de usuarios </h3>
</div>
<div class="col-md-6 text-end">
	<a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register"> <i class="fas fa-plus"></i> Crear nuevo usuario </a>
</div>

<br />

<div class="p-4 mt-4 border rounded">
	<table id="tblDatos" class="table table-hover" style="width:100%">
		<thead>
			<tr class="table-dark">
				<th>Username</th>
				<th>Nombre</th>
				<th>Apellidos</th>
				<th>Email</th>
				<th>Telefono</th>
				<th>Role</th>
				<th></th>
			</tr>
		</thead>
	</table>
</div>
@section Scripts{
<script src="~/js/Usuario.js"></script>
}