@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="row">
	<div class="col-6">
		<h3 class="text-primary"> Lista de productos </h3>
	</div>
	<div class="col-6 text-end">
		<a class="btn btn-primary" asp-action="upsert"> <i class="fas fa-plus"></i> Crear nuevo producto </a>
	</div>
</div>

<br />

<div class="p-4 border rounded">
	<table id="tblDatos" class="table table-hover" style="width:100%">
		<thead>
			<tr class="table-dark">
				<th>Numero serie</th>
				<th>Descripcion</th>
				<th>Categoria</th>
				<th>Marca</th>
				<th>Precio</th>
				<th></th>
			</tr>
		</thead>
	</table>
</div>
@section Scripts{ 
    <script src="~/js/Producto.js"></script>
}