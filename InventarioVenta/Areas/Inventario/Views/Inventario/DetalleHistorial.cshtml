@using IV.Modelos
@model IEnumerable<InventarioDetalle>
@{
	ViewData["Title"] = "DetalleHistorial";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
	<div class="col-md-6">
		<h3 class="text-primary">Detalle historial de inventario</h3>
	</div>
</div>

<br />

<div>
	<div class="p-4 mt-4 border rounded">
		<table id="tblDatos" class="table table-hover" style="width:100%">
			<thead>
				<tr class="table-dark">
					<th>Producto</th>
					<th>Marca</th>
					<th style="text-align:right;">Costo</th>
					<th style="text-align:right;">Stock anterior</th>
					<th style="text-align:right;">Cantidad</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td style="font-size:14px;">
							@Html.DisplayFor(i => item.Producto.Descripcion)
						</td>
						<td style="font-size:14px;">
							@Html.DisplayFor(i => item.Producto.Marca.Nombre)
						</td>
						<td style="font-size:14px; text-align:right;">
							@Html.DisplayFor(i => item.Producto.Costo)
						</td>
						<td style="font-size:14px; text-align:right;">
							@Html.DisplayFor(i => item.StockAnterior)
						</td>
						<td style="font-size:14px; text-align:right; color:blue;font-weight:bold;">
							@Html.DisplayFor(i => item.Cantidad)
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

<div class="col-md-6 p-2">
	<a class="btn btn-success" asp-action="Historial">Regresar</a>
</div>